<%- include('header') -%>

<div class="container">
	<div class="input-group">
	    <p>Your information is already in our system. Feel free to update any of your information:</p>

	    <form data-toggle="validator" action='/shopper' method='POST' id='shopperform' role="form">
	    	<input type="hidden" name="id" value=<%-shopper.id%>>
	    	<div class="form-group">
	    		<label for="firstname">First Name</label>
	    		<input class="form-control" type="text" name="firstname" id="firstname" placeholder="First Name" value=<%-shopper.firstname%> required>
	    	</div>
	    	<div class="form-group">
	    		<label for="lastname">Last Name</label>
	    		<input class="form-control" type="text" name="lastname" id="lastname" placeholder="Last Name" value=<%-shopper.lastname%> required>
	    	</div>
	    	<div class="form-group">
	    		<label for="email">Email Address</label>
				<input class="form-control" type="email" name="email" id="email" placeholder="Email" data-error="Please enter a valid email address" value=<%-shopper.email%> required>
			</div>
			<div class="form-group">
				<label for="phone">Phone Number</label>
				<input class="form-control" type="text" name="phone" id="phone" placeholder="Phone Number" value=<%-shopper.phone%> required>
			</div>
			
			<div class="form-group">
				<label for="region">Region</label>
				<br>
				<select name="region" id="region" form="shopperform">
					<% regions.forEach(function (region) { %>
						<option value="<%-region[0]%>" <% if(region[0] === shopper.region) { %> selected <% } %>   ><%-region[1]%></option>
					<% }); %>
				</select>
			</div>
			<div class="form-group">
				<input class="btn btn-primary" type="submit" value="Submit">
			</div>
		</form>
	</div>
</div>